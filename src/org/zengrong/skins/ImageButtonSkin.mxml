<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" minWidth="21" minHeight="21" alpha.disabled="0.5">
    <fx:Metadata>
        <![CDATA[ 
        [HostComponent("org.zengrong.controls.ImageButton")]
        ]]>
    </fx:Metadata>
	<s:states>
		<s:State name="up"/>
		<s:State name="over"/>
		<s:State name="down"/>
		<s:State name="disabled"/>
	</s:states>
	<s:BitmapImage source="{hostComponent.image}" top="0" left="0" right="0" bottom="0">
		<s:filters>
			<s:DropShadowFilter
				distance="1"
				distance.over="2"
				distance.down="3"/>
		</s:filters>
	</s:BitmapImage>
</s:SparkSkin>
